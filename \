#include <stdio.h>
#include <stdlib.h>
#include <string.h>


void show_cmd(char * str){
	printf("%s",str);

}

int main(){
	printf("$ ");
	char buff[100];
	fgets(buff,sizeof(buff),stdin);
	char* first_part=buff;
	char* second_part;
	for(int i=0;buff[i]!='/0';i++){
		if (buff[i]==" "){
			buff[i]='/0';
			second_part=&buff[i+1];
			break;

		}
	}

	
	if(strcmp(first_part,"show")){
		
		show_cmd(second_part);

	}
	else{
		printf("no such command found");
		exit(1);
	}
	return 0;
}
